@page
@model web_invoice_generator.Pages.Services.CreateModel
@{
}

<br>
<h2>Nauja paslauga</h2>


@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dissmiss='alert' aria-label='close'></button>
	</div>
}

<form method="POST">
	<div class="row mt-3 mb-5">

		<label class="col-sm-3 col-form-label m-1">Pavadinimas</label>
		<div class="col-sm-6 m-1">
			<input type="text" class="form-control" name="name" value="@Model.serviceInfo.name"></input>
			@*if field empty(error), filling form with value atribute with existing info *@
		</div>	
		
		<label class="col-sm-3 col-form-label m-1">Eur / val.</label>
		<div class="col-sm-6 m-1">
			<input type="text" class="form-control" name="hour_price" value="@Model.serviceInfo.hour_price"></input>
		</div>


		
		@*if success showing confirmation that data correct *@
		@if (Model.successMessage.Length > 0)
		{
			<div class="row m-2">
					<div class="col-sm-9">
						<div class="alert alert-success alert-dismissible fade show" role="alert">
							<strong>@Model.successMessage</strong>
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					</div>
			</div>
		}

		<div class="row m-2">
			<div class="offset-sm-3 col-sm-3 d-grid me-2">
				<button type="submit" class="btn btn-primary">Išsaugoti</button>
			</div>
			<div class="col-sm-3 d-grid">
				<a class="btn btn-outline-primary" href="/" role="button">Atšaukti</a>
			</div>
		</div>
	</div>
</form>
